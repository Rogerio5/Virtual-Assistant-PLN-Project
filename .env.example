# ---------------------------
# JWT / Auth
# ---------------------------
JWT_SECRET=troque_por_uma_chave_secreta
JWT_ALGORITHM=HS256
JWT_EXPIRES_SECONDS=3600
ADMIN_API_KEY=

# ---------------------------
# OpenAI (opcional)
# ---------------------------
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# ---------------------------
# Whisper local (opcional)
# ---------------------------
WHISPER_MODEL=small
WHISPER_DEVICE=cpu
WHISPER_COMPUTE=

# ---------------------------
# FFmpeg / Audio
# ---------------------------
FFMPEG_BIN=ffmpeg

# ---------------------------
# Frontend / CORS
# ---------------------------
# Separe múltiplas origens por vírgula, sem espaços obrigatórios.
FRONTEND_ORIGINS=http://localhost:5174,http://localhost:3000

# ---------------------------
# Upload limits
# ---------------------------
# Tamanho máximo de upload em bytes (ex.: 10 MB = 10485760)
MAX_CONTENT_LENGTH_BYTES=10485760

# ---------------------------
# Database (opcional)
# ---------------------------
# Exemplo: postgresql://user:password@localhost:5432/yourdb
DATABASE_URL=postgresql://user:password@localhost:5432/yourdb

# ---------------------------
# App / Environment
# ---------------------------
APP_TITLE="Assistant Dashboard"
APP_ENV=development   # development | production
DEBUG=true

# ---------------------------
# SMTP (opcional)
# ---------------------------
SMTP_EMAIL=
SMTP_PASSWORD=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true

# ---------------------------
# Storage / Cloud (opcional)
# ---------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=

# ---------------------------
# Observability (opcional)
# ---------------------------
SENTRY_DSN=
